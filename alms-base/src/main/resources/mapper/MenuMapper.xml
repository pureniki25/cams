<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hongte.alms.base.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hongte.alms.base.entity.Menu">
        <id column="id" property="id" />
        <result column="icon" property="icon" />
        <result column="index" property="index" />
        <result column="title" property="title" />
        <result column="url" property="url" />
        <result column="parent_id" property="parentId" />
        <result column="spread" property="spread" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, icon, index, title, url, parent_id AS parentId, spread
    </sql>

</mapper>
