<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hongte.alms.base.mapper.WithholdingFlowRecordMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hongte.alms.base.entity.WithholdingFlowRecord">
        <id column="id" property="id" />
        <result column="withholding_platform" property="withholdingPlatform" />
        <result column="merchant_no" property="merchantNo" />
        <result column="terminal_no" property="terminalNo" />
        <result column="trade_type" property="tradeType" />
        <result column="product_name" property="productName" />
        <result column="merchant_order_no" property="merchantOrderNo" />
        <result column="trade_order_no" property="tradeOrderNo" />
        <result column="trade_water_no" property="tradeWaterNo" />
        <result column="trade_date" property="tradeDate" />
        <result column="amount" property="amount" />
        <result column="service_charge" property="serviceCharge" />
        <result column="payment_card_type" property="paymentCardType" />
        <result column="payment_card_no" property="paymentCardNo" />
        <result column="liquidation_date" property="liquidationDate" />
        <result column="withholding_status" property="withholdingStatus" />
        <result column="identity_card" property="identityCard" />
        <result column="customer_name" property="customerName" />
        <result column="phone_number" property="phoneNumber" />
        <result column="bank_card" property="bankCard" />
        <result column="remark" property="remark" />
        <result column="bank_code" property="bankCode" />
        <result column="bank_name" property="bankName" />
        <result column="import_time" property="importTime" />
        <result column="import_system" property="importSystem" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, withholding_platform AS withholdingPlatform, merchant_no AS merchantNo, terminal_no AS terminalNo, trade_type AS tradeType, product_name AS productName, merchant_order_no AS merchantOrderNo, trade_order_no AS tradeOrderNo, trade_water_no AS tradeWaterNo, trade_date AS tradeDate, amount, service_charge AS serviceCharge, payment_card_type AS paymentCardType,payment_card_no AS paymentCardNo, liquidation_date AS liquidationDate, withholding_status AS withholdingStatus, identity_card AS identityCard, customer_name AS customerName, phone_number AS phoneNumber, bank_card AS bankCard, remark, bank_code AS bankCode, bank_name AS bankName, import_time AS importTime, import_system AS importSystem
    </sql>

    <select id="querySummary" parameterType="com.hongte.alms.base.customer.vo.WithholdFlowReq" resultType="com.hongte.alms.base.vo.withhold.WithholdingFlowRecordSummaryVo">
        select count(1) as totalNumber, sum(amount) as totalAmount, sum(service_charge) as totalServiceCharge from tb_withholding_flow_record
        where 1=1
        <if test="withholdingPlatform != null ">
            and withholding_platform = #{withholdingPlatform}
        </if>
        <if test="startTime !=null and startTime != ''">
            and liquidation_date &gt;= #{startTime}
        </if>
        <if test="endTime != null and endTime !=''">
            and liquidation_date &lt;= #{endTime}
        </if>
    </select>
</mapper>
